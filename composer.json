{
  "name": "acathrin/doctrine-audit-bundle",
  "type": "symfony-bundle",
  "description": "This bundle creates audit logs for all doctrine ORM database related changes.",
  "keywords": ["doctrine", "audit"],
  "license": "MIT",
  "authors": [
    {
      "name": "Damien Harper",
      "email": "damien.harper@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.1",
    "symfony/orm-pack": "^1.0",
    "symfony/event-dispatcher": "^3.4 || ^4.0",
    "symfony/security-bundle": "^3.4 || ^4.0",
    "pagerfanta/pagerfanta": "^2.1",
    "white-october/pagerfanta-bundle": "^1.2",
    "doctrine/annotations": "^1.8",
    "symfony/lock": "^3.4 || ^4.0"
  },
  "autoload": {
    "psr-4": {
      "DH\\DoctrineAuditBundle\\": "src/DoctrineAuditBundle"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DH\\DoctrineAuditBundle\\Tests\\": "tests/DoctrineAuditBundle"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^7.0 || ^8.0",
    "matthiasnoback/symfony-dependency-injection-test": "^3.1 || ^4.0",
    "gedmo/doctrine-extensions": "^2.4",
    "symfony/var-dumper": "^4.2",
    "stof/doctrine-extensions-bundle": "^1.3",
    "phpstan/phpstan": "^0.11.2",
    "phpstan/phpstan-doctrine": "^0.11.1",
    "phpstan/phpstan-symfony": "^0.11.1",
    "twig/extensions": "^1.5",
    "friendsofphp/php-cs-fixer": "^2.15"
  },
  "scripts": {
    "test": "php -d pcov.enabled=1 ./vendor/bin/phpunit",
    "csfixer": "vendor/bin/php-cs-fixer fix --config=.php_cs --cache-file=.php_cs.cache --verbose",
    "phpstan": "vendor/bin/phpstan analyse src"
  }
}
